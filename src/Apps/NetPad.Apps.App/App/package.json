{
    "name": "netpad",
    "version": "0.1.0",
    "description": "A cross-platform C# editor and playground.",
    "author": {
        "name": "Tareq Imbasher",
        "email": "tareq@meccasoft.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/tareqimbasher/NetPad"
    },
    "scripts": {
        "lint:js": "eslint src test cypress --ext .js,.ts",
        "lint:html": "htmlhint -c .htmlhintrc src",
        "lint:css": "stylelint src/**/*.scss",
        "lint": "npm run lint:js && npm run lint:html && npm run lint:css",
        "pretest": "npm run lint",
        "start": "webpack serve",
        "build": "rimraf dist && webpack --env production",
        "analyze": "rimraf dist && webpack --env production --analyze",
        "test": "jest",
        "cypress": "cypress run",
        "test:e2e": "cross-env CI=1 start-server-and-test start http://localhost:9000 cypress"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "transform": {
            "\\.(css|less|sass|scss|styl|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub",
            "\\.(ts|html)$": "@aurelia/ts-jest"
        },
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.d.ts"
        ],
        "globals": {
            "ts-jest": {
                "isolatedModules": true
            }
        }
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^6.1.1",
        "@microsoft/signalr": "^6.0.2",
        "@popperjs/core": "^2.11.2",
        "@types/ts-nameof": "^4.2.1",
        "aurelia": "^2.0.0-alpha.35",
        "bootstrap": "^5.1.3",
        "dragula": "^3.7.3",
        "monaco-editor": "^0.32.1",
        "path-browserify": "^1.0.1",
        "sanitize-html": "^2.7.0",
        "split.js": "^1.6.5",
        "ts-nameof": "^5.0.0"
    },
    "devDependencies": {
        "@aurelia/testing": "^2.0.0-alpha.35",
        "@aurelia/ts-jest": "^2.0.0-alpha.35",
        "@aurelia/webpack-loader": "^2.0.0-alpha.35",
        "@types/dragula": "^3.7.1",
        "@types/jest": "^28.1.1",
        "@types/node": "^17.0.41",
        "@types/sanitize-html": "^2.6.2",
        "@types/webpack-env": "^1.17.0",
        "@typescript-eslint/eslint-plugin": "^5.11.0",
        "@typescript-eslint/parser": "^5.11.0",
        "autoprefixer": "^10.4.5",
        "cross-env": "^7.0.3",
        "css-loader": "^6.7.1",
        "cypress": "^8.7.0",
        "dotenv-webpack": "^7.1.0",
        "electron": "^15.5.5",
        "electron-builder": "^23.1.0",
        "eslint": "^8.9.0",
        "eslint-plugin-cypress": "^2.12.1",
        "html-webpack-plugin": "^5.5.0",
        "htmlhint": "^1.1.4",
        "jest": "^28.1.1",
        "jest-transform-stub": "^2.0.0",
        "monaco-editor-webpack-plugin": "^7.0.1",
        "postcss": "^8.4.14",
        "postcss-loader": "^7.0.0",
        "rimraf": "^3.0.2",
        "sass": "^1.52.2",
        "sass-loader": "^13.0.0",
        "start-server-and-test": "^1.14.0",
        "style-loader": "^3.3.1",
        "stylelint": "^14.5.0",
        "stylelint-config-standard-scss": "^3.0.0",
        "ts-loader": "^9.3.0",
        "tslib": "^2.4.0",
        "typescript": "^4.7.3",
        "webpack": "^5.73.0",
        "webpack-bundle-analyzer": "^4.5.0",
        "webpack-cli": "^4.9.2",
        "webpack-dev-server": "^4.9.2"
    },
    "devDependenciesComments": {
        "electron-builder": "Only installed for the TS type definitions to be used in 'electron.manifest.js' in proj root"
    }
}
